<view class="page">
    <view class="page__bd">
        <mp-cells>
            <mp-cell>
                <textarea
                        placeholder="给我们提点建议吧，我们会认真采纳的！"
                        style="width: 100%;height: 200px;padding: 5px"
                        maxlength="300"
                        bindinput="ChangeArea"
                />
            </mp-cell>
        </mp-cells>
        <button
                style="background-color:#36b7ab;color: #FFFFFF;width: 90%;border-radius: 15px;margin-top: 15px"
                bindtap="SendComplaint"
        >
            发布
        </button>
    </view>
</view>