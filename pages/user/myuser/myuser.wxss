.bg {
    filter: blur(5px) brightness(70%) opacity(40%);
    width: 100%;
    height: 250px;
}

.user {
    display: flex;
    flex-direction: column;
    align-items: center;
    position: absolute;
    top: 75px;
    width: 200px;
    right: 25%;
}

.user view{
    display: flex;
    flex-direction: row;
}

.user view text{
    margin-left: 10px;
}

.user image {
    height: 65px;
    width: 65px;
    border-radius: 35px;
}

.user button {
    background-color: #36B7AB;
    color: #FFFFFF;
    line-height: 30px;
    margin-top: 5px;
    width: 120px;
}

.top back {
    font-size: 25px;
    font-weight: bold;
    position: absolute;
    top: 15px;
    left: 10px;
    z-index: 1;
}

.bottom {
    background-color: #ffffff;
    margin-top: 5px;
    padding: 5px 20px 0 20px
}

.bottom detail{
    margin-top: 5px;
    font-weight: bold;
}

.bottom button {
    background-color: inherit;
}


button::after {
    border: none;
}