.bg-gray {
    background-color: rgb(238,240,244);
    width: auto;
}
.bg{
    background-color: #FFFFFF;
    margin: 10px;
    display: flex;
    flex-direction: row;
    padding: 10px;
    border-radius: 15px;
    align-items: center;
}
.bg image{
    width: 50px;
    height: 50px;
}
.bg text{
    font-weight: bold;
    margin-left: 10px;
}

.bg button{
    background-color: #36b7ab;
    color: #FFFFFF;
    line-height: 30px;
    border-radius: 15px;
}

button::after{ border: none; }