@import "/iconfont.wxss";


.avatar {
    width: 40px;
    height: 40px;
    border-radius: 50rpx;
}

.user {
    flex-direction: row;
    display: flex;
    align-items: center;
    margin: 10px 0 5px 0;
}

.title {
    margin-left: 10px;
    font-weight: bold;
}


.bg-gray detail {
    font-size: 17px;
    font-weight: bold;
    margin-top: 10px;
    word-break: break-all;
    display: -webkit-box;
    -webkit-line-clamp: 3; /*限制在一个块元素显示的文本的行数*/
    -webkit-box-orient: vertical;
    overflow: hidden;
}

.bg-gray button {
    background-color: inherit;
}



button::after{ border: none; }