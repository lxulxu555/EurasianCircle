.bg-gray {
    background-color: rgb(238,240,244);
    width: auto;
}

.avatar {
    width: 40px;
    height: 40px;
    border-radius: 50rpx;
}

.user {
    flex-direction: row;
    display: flex;
    align-items: center;
    margin: 10px 0 5px 0;
}

.title {
    margin-left: 10px;
    font-weight: bold;
}


.bg-gray detail {
    font-size: 17px;
    font-weight: bold;
    margin-top: 10px;
    word-break: break-all;
    display: -webkit-box;
    -webkit-line-clamp: 3; /*限制在一个块元素显示的文本的行数*/
    -webkit-box-orient: vertical;
    overflow: hidden;
}

.bg-gray button {
    background-color: inherit;
}
.actionbutton{
    position:fixed;
    bottom:20px;
    right: 30px;
    border: solid 1px #36b7ab;
    border-radius: 30px;
    width: 55px;
    height: 50px;
    padding: 5px;
    display: flex;
    justify-content: center;
    align-items: center;
}



button::after{ border: none; }